// Use this in Javascript project file .vscode folder to colorize the borders of the editor 
{
  "java.compile.nullAnalysis.mode": "automatic",
  "workbench.colorCustomizations": {
    "activityBar.activeBackground": "#beaf00",
    "activityBar.background": "#beaf00",
    "activityBar.foreground": "#15202b",
    "activityBar.inactiveForeground": "#15202b99",
    "activityBarBadge.background": "#bffffa",
    "activityBarBadge.foreground": "#15202b",

    "commandCenter.border": "#e7e7e799",
    "sash.hoverBorder": "#b1be00",

    "statusBar.background": "#8b8000",
    "statusBar.foreground": "#ffffff",
    "statusBarItem.hoverBackground": "#beaf00",
    "statusBarItem.remoteBackground": "#beaf00",
    "statusBarItem.remoteForeground": "#e7e7e7",

    "titleBar.activeBackground": "#8b8000",
    "titleBar.activeForeground": "#ffffff",
    "titleBar.inactiveBackground": "#b8800099",
    "titleBar.inactiveForeground": "#e7e7e799"
  }
}


